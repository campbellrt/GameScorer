<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.campbell.gamescorer.NewGameActivity">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numberSpinnerLayout"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_num_players"
            android:id="@+id/text_num_players"
            android:textSize="20sp"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/playersNumberSpinner"
            android:layout_toEndOf="@id/text_num_players"
            android:gravity="right"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameTypeLayout"
        android:layout_below="@id/numberSpinnerLayout"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_game_type"
            android:id="@+id/text_game_type"
            android:layout_alignParentStart="true"
            android:textSize="20sp"/>

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gameTypeSpinner"
            android:layout_toEndOf="@id/text_game_type"
            android:gravity="right"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/turnTypeLayout"
        android:layout_below="@id/gameTypeLayout"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_turn_type"
            android:id="@+id/text_turn_type"
            android:layout_alignParentStart="true"
            android:textSize="20sp"/>

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/turnTypeSpinner"
            android:layout_toEndOf="@id/text_turn_type"
            android:gravity="right"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/turnTypeLayout"
        android:layout_below="@id/gameTypeLayout"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_turn_type"
            android:id="@+id/text_turn_type"
            android:layout_alignParentStart="true"
            android:textSize="20sp"/>

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/turnTypeSpinner"
            android:layout_toEndOf="@id/text_turn_type"
            android:gravity="right"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/winTypeLayout"
        android:layout_below="@id/turnTypeLayout"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_win_type"
            android:id="@+id/text_win_type"
            android:layout_alignParentStart="true"
            android:textSize="20sp"/>

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/winTypeSpinner"
            android:layout_toEndOf="@id/text_win_type"
            android:gravity="right"/>
    </RelativeLayout>


    <Button
        android:id="@+id/button_confirm_players"
        android:text="@string/button_confirm_players"
        android:layout_width="wrap_content"
        android:minWidth="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
